{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./", 
        "typeRoots": [
            "src/types",
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "files": [
        "src/types/express.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}